<div class="loginmodal">
	Login:<br>
	<%= form_tag("/auth", method: "post") do %>
	  <p><%= label_tag(:email, "Email:", :required => true) %>
	 	<%= text_field_tag :email %></p>
	  <p><%= label_tag(:password, "Password:", required: :true) %>
	  <%= password_field_tag :password %></p>
	  <p><%= submit_tag("Log in!") %></p>
	<% end %>
</div>
