<div id="signupmodal">
  
  <% if flash[:signup_error] %>
    <div id="signuperror">
      <p><%= flash[:signup_error] %></p>
    </div>
  <% end %>

  Sign up:<br>
  <%= form_tag(owners_path, method: "post") do %>
    <p><%= label_tag(:email, "Email:") %>
    <%= email_field_tag :email, nil, required: :true %></p>
    <p><%= label_tag(:password, "Password:") %>
    <%= password_field_tag :password, nil, required: :true %></p>
    <p><%= label_tag(:password_confirm, "Confirm:") %>
    <%= password_field_tag :password_confirm, nil, required: :true %></p>
    <p><%= submit_tag("Sign up!") %></p>
  <% end %>
</div>
