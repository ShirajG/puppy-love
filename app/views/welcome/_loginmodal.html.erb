<div id="loginmodal">
  
  <% if flash[:login_error] %>
    <div id="loginerror">
      <p><%= flash[:login_error] %></p>
    </div>
  <% end %>

  Login:<br>
  <%= form_tag(auth_path, method: "post") do %>
    <p><%= label_tag(:email, "Email:") %>
    <%= email_field_tag :email, nil, required: :true %></p>
    <p><%= label_tag(:password, "Password:") %>
    <%= password_field_tag :password, nil, required: :true %></p>
    <p><%= submit_tag("Log in!") %></p>
  <% end %>
</div>
